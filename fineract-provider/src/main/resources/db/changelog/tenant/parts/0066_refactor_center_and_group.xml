<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <!--Add fields into m_group table related to m_center_group-->
    <changeSet author="fineract" id="1">
        <addColumn tableName="m_group">
            <column name="legacy_number" type="BIGINT" defaultValueComputed="NULL" />
            <column name="latitude" type="DECIMAL(12, 4)" defaultValueComputed="NULL" />
            <column name="longitude" type="DECIMAL(12, 4)" defaultValueComputed="NULL" />
            <column name="formation_date" type="date" defaultValueComputed="NULL" />
            <column name="size" type="INT" defaultValueComputed="NULL" />
            <column name="responsible_user_id" type="BIGINT(20)" defaultValueComputed="NULL" />
            <column name="createdby_id" type="BIGINT" >
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="lastmodifiedby_id" type="BIGINT" >
                <constraints nullable="false"/>
            </column>
            <column name="lastmodified_date" type="datetime">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <!--Add fields into m_group table related to m_portfolio_center-->
    <changeSet author="fineract" id="2">
        <addColumn tableName="m_group">
            <column name="portfolio_id" type="BIGINT" defaultValueComputed="NULL" />
            <column name="city_id" type="INT" defaultValueComputed="NULL" />
            <column name="state_province_id" type="INT" defaultValueComputed="NULL"/>
            <column name="type_id" type="INT" defaultValueComputed="NULL"/>
            <column name="distance_from_agency" type="INT" defaultValueComputed="NULL"/>
            <column name="reference_point" type="VARCHAR(150)" defaultValueComputed="NULL" />
        </addColumn>
    </changeSet>
</databaseChangeLog>
