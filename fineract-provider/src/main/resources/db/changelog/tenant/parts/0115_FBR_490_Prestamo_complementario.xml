<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="4" author="fineract">
        <sql>
            <![CDATA[
                 UPDATE m_product_loan SET can_use_for_topup = 0;
                 UPDATE m_product_loan SET can_use_for_topup = 1 WHERE id NOT IN (11, 3, 7);
            ]]>
        </sql>
    </changeSet>

    <changeSet id="2" author="fineract">
        <sql>
            <![CDATA[
            UPDATE stretchy_report sr
            SET sr.report_name = REPLACE(sr.report_name, ' ', '')
            WHERE sr.report_name = 'ClientSummary ';
            ]]>
        </sql>
    </changeSet>


    <changeSet id="3" author="fineract">
        <sql>
            <![CDATA[
                    UPDATE stretchy_report sr SET sr.use_report = 0 WHERE sr.report_name = 'Print Bank Cheque';
            ]]>
        </sql>
    </changeSet>

</databaseChangeLog>
