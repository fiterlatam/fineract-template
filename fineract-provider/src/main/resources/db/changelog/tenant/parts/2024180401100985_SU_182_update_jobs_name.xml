<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="1" author="fineract">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="1">
                SELECT COUNT(*) FROM job WHERE name = 'Ally Collection Settlement';
            </sqlCheck>
        </preConditions>
        <update tableName="job" >
            <column name="name" value="Liquidacion de Recaudos"/>
            <column name="display_name" value="Liquidacion de Recaudos"/>
            <where>display_name='Ally Collection Settlement'</where>
        </update>
    </changeSet>

    <changeSet id="2" author="fineract">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="1">
                SELECT COUNT(*) FROM job WHERE name = 'Ally Purchase Settlement';
            </sqlCheck>
        </preConditions>
        <update tableName="job" >
            <column name="name" value="Liquidacion de Compras"/>
            <column name="display_name" value="Liquidacion de Compras"/>
            <where>name='Ally Purchase Settlement'</where>
        </update>
    </changeSet>

    <changeSet id="3" author="fineract">
        <update tableName="c_client_ally" schemaName="custom">
            <column name="last_job_run" value="NULL"/>
            <column name="last_job_run_purchase" value="NULL"/>
        </update>
    </changeSet>

</databaseChangeLog>
