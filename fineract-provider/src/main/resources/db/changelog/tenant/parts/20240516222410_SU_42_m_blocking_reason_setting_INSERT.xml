<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="fineract" id="1" >
      <preConditions>
          <not>
              <columnExists tableName="m_blocking_reason_setting" columnName="affects_client_level"/>
              <columnExists tableName="m_blocking_reason_setting" columnName="affects_credit_level"/>
          </not>
      </preConditions>
        <addColumn tableName="m_blocking_reason_setting">
            <column name="affects_client_level" type="TINYINT"/>
            <column name="affects_credit_level" type="TINYINT"/>
        </addColumn>
    </changeSet>
    <changeSet id="2" author="fineract">
        <sql>
            <![CDATA[
                UPDATE m_blocking_reason_setting SET affects_client_level = 1 WHERE level = 'CREDIT' AND name_of_reason = 'RECLAMADO A AVALADORA';
            ]]>
        </sql>
    </changeSet>
    <changeSet id="3" author="fineract">
        <preConditions>
            <not>
                <columnExists tableName="m_credit_blocking_reason" columnName="block_date"/>
            </not>
        </preConditions>
       <addColumn tableName="m_credit_blocking_reason">
           <column name="block_date" type="date"/>
       </addColumn>
    </changeSet>

    <changeSet id="4" author="m_permission">
        <insert tableName="m_permission">
            <column name="grouping" value="portfolio"/>
            <column name="code" value="CREATE_LOANBLOCKINGREASON"/>
            <column name="entity_name" value="LOANBLOCKINGREASON"/>
            <column name="action_name" value="CREATE"/>
            <column name="can_maker_checker" value="1"/>
        </insert>
    </changeSet>

</databaseChangeLog>
