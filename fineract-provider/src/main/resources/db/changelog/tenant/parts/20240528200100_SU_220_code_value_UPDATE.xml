<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="fineract" id="10">
        <sql endDelimiter=";">
            UPDATE m_code_value
            SET code_score = order_position
            WHERE id IN (
                SELECT id FROM m_code_value mcv WHERE mcv.code_score is null
            );
        </sql>
    </changeSet>

    <changeSet author="fineract" id="20">
        <sql endDelimiter=";">
            UPDATE m_code_value
            SET code_score = RIGHT(CONCAT('0000',code_score),4)
            WHERE
                code_id IN (
                    SELECT id FROM m_code mcv WHERE mcv.code_name = 'CIIU'
                )
            ;
        </sql>
    </changeSet>

</databaseChangeLog>
