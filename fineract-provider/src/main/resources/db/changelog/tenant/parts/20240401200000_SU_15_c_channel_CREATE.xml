<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="fineract" id="10">
        <createTable schemaName= "custom" tableName="c_channel">
            <column name="id" type="INT4">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="hash" type="VARCHAR(5000)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(1000)">
                <constraints nullable="true"/>
            </column>
            <column name="active" type="boolean" defaultValue="true">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="fineract" id="15">
        <addAutoIncrement columnDataType="int"
                          columnName="id"
                          incrementBy="1"
                          schemaName="custom"
                          startWith="1"
                          tableName="c_channel"/>
    </changeSet>

    <changeSet author="fineract" id="20">
        <addUniqueConstraint columnNames="hash"
                             constraintName="unique_hash"
                             schemaName="custom"
                             tableName="c_channel"/>
    </changeSet>

    <changeSet author="fineract" id="30" >
        <insert schemaName="custom" tableName="c_channel">
            <column name="hash" value="general"/>
            <column name="name" value="MensajeGeneral"/>
            <column name="description" value="Mensaje general para devolver como respuesta API en caso de que no haya un mensaje específico para el canal."/>
            <column name="active" valueBoolean="true"/>
        </insert>
    </changeSet>

    <changeSet author="fineract" id="35" >
        <insert schemaName="custom" tableName="c_channel">
            <column name="hash" value="dde2fd2620c5d10e56349d5f54229985781e7b873ceb489804ab1290c5234849"/>
            <column name="name" value="E-Commerce"/>
            <column name="description" value="E-commerce Channel"/>
            <column name="active" valueBoolean="true"/>
        </insert>
    </changeSet>

    <changeSet author="fineract" id="40" >
        <insert schemaName="custom" tableName="c_channel">
            <column name="hash" value="1ae8d4db830eed577c6023998337d0ea771746f1a3ba08e5df1ef0d1673431a3"/>
            <column name="name" value="Tienda física"/>
            <column name="description" value="Tienda física Channel"/>
            <column name="active" valueBoolean="true"/>
        </insert>
    </changeSet>

    <changeSet author="fineract" id="50" >
        <insert schemaName="custom" tableName="c_channel">
            <column name="hash" value="9a754b5721dca6c1291699643ae8c4b17b08f2d9fa9084616575eec94aa04044"/>
            <column name="name" value="Al bolsillo"/>
            <column name="description" value="Al bolsillo (app interna, que soporta su+ cash) Channel"/>
            <column name="active" valueBoolean="true"/>
        </insert>
    </changeSet>

    <changeSet author="fineract" id="60" >
        <insert schemaName="custom" tableName="c_channel">
            <column name="hash" value="9120ed5f9adbc602265e93e4e0e12848a9188cabbbdae60a9c1b16e8af8e2d5e"/>
            <column name="name" value="Integración aliados externos"/>
            <column name="description" value="Integración aliados externos Channel"/>
            <column name="active" valueBoolean="true"/>
        </insert>
    </changeSet>

    <changeSet author="fineract" id="61">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists schemaName="custom" tableName="c_channel" columnName="channel_type"/>
            </not>
        </preConditions>
        <addColumn schemaName="custom" tableName="c_channel">
            <column name="channel_type" type="INT">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet author="fineract" id="62" >
        <insert schemaName="custom" tableName="c_channel">
            <column name="hash" value="Mifos"/>
            <column name="name" value="Mifos"/>
            <column name="description" value="Mifos"/>
            <column name="active" valueBoolean="true"/>
            <column name="channel_type" valueNumeric="1"/>
        </insert>
    </changeSet>

</databaseChangeLog>
