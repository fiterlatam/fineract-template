<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet author="fineract" id="1">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists columnName="prequalification_type_enum" tableName="m_prequalification_group"/>
            </not>
        </preConditions>
        <addColumn tableName="m_prequalification_group">
            <column name="prequalification_type_enum" type="INTEGER" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <changeSet author="fineract" id="2">
        <sql>
            UPDATE m_prequalification_group SET prequalification_type_enum = 1 WHERE product_id IN
                                                                                     (SELECT id FROM m_product_loan WHERE owner_type_enum = 1 AND id = product_id)
        </sql>
        <sql>
            UPDATE m_prequalification_group SET prequalification_type_enum = 2 WHERE product_id IN
                                                                                     (SELECT id FROM m_product_loan WHERE owner_type_enum = 2 AND id = product_id)
        </sql>
    </changeSet>
</databaseChangeLog>
