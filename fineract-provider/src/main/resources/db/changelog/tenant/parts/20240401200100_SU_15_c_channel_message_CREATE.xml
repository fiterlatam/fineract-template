<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="fineract" id="10">
        <createTable schemaName= "custom" tableName="c_channel_message">
            <column name="id" type="INT4">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="channel_id" type="INT4">
                <constraints nullable="true"/>
            </column>
            <column name="validation_id" type="INT4">
                <constraints nullable="false"/>
            </column>
            <column name="message" type="VARCHAR(5000)">
                <constraints nullable="false"/>
            </column>
            <column name="enabled" type="boolean" defaultValue="true">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="fineract" id="15">
        <addAutoIncrement columnDataType="int"
                          columnName="id"
                          incrementBy="1"
                          schemaName="custom"
                          startWith="1"
                          tableName="c_channel_message"/>
    </changeSet>

    <changeSet  author="fineract"  id="20">
        <addForeignKeyConstraint  baseTableSchemaName="custom"
                                  baseTableName="c_channel_message"
                                  baseColumnNames="channel_id"
                                  referencedTableSchemaName="custom"
                                  referencedTableName="c_channel"
                                  referencedColumnNames="id"
                                  constraintName="fk_channel_message_channel"
                                  onDelete="CASCADE"
                                  onUpdate="RESTRICT"
                                  validate="true"/>
    </changeSet>

    <changeSet  author="fineract"  id="30">
        <addForeignKeyConstraint  baseTableSchemaName="custom"
                                  baseTableName="c_channel_message"
                                  baseColumnNames="validation_id"
                                  referencedTableSchemaName="custom"
                                  referencedTableName="c_channel_validation"
                                  referencedColumnNames="id"
                                  constraintName="fk_channel_message_channel_validation"
                                  onDelete="CASCADE"
                                  onUpdate="RESTRICT"
                                  validate="true"/>
    </changeSet>

    <changeSet author="fineract" id="40" >
        <insert schemaName="custom" tableName="c_channel_message">
            <column name="channel_id" valueNumeric="1"/>
            <column name="validation_id" valueNumeric="100"/>
            <column name="message" value="El canal no se encuentra habilitado"/>
            <column name="enabled" valueBoolean="true"/>
        </insert>
    </changeSet>


