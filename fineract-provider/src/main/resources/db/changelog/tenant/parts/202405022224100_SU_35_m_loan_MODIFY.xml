<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="fineract" id="1">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="m_loan" columnName="last_activity_date"/>
            </not>
        </preConditions>
        <addColumn tableName="m_loan">
            <column name="last_activity_date" type="datetime"/>
        </addColumn>
    </changeSet>

    <changeSet author="fineract" id="2">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="m_product_loan" columnName="max_client_inactivity_period"/>
            </not>
        </preConditions>
        <addColumn tableName="m_product_loan">
            <column name="max_client_inactivity_period" type="int"/>
        </addColumn>
    </changeSet>

    <changeSet author="fineract" id="3">
        <createIndex indexName="idx_loan_last_activity_date" tableName="m_loan">
            <column name="last_activity_date"/>
        </createIndex>
    </changeSet>

    <changeSet id="4" author="fineract">
        <insert tableName="job">
            <column name="name" value="Block Inactive Clients" />
            <column name="display_name" value="Block Inactive Clients" />
            <column name="cron_expression" value="0 1 0 1/1 * ? *" />
            <column name="task_priority" value="5" />
            <column name="job_key" value="Block Inactive Clients1_DEFAULT" />
            <column name="is_active" valueBoolean="true" />
            <column name="updates_allowed" valueBoolean="true" />
            <column name="node_id" value="1" />
            <column name="create_time" value="now()" />
        </insert>
    </changeSet>

</databaseChangeLog>
