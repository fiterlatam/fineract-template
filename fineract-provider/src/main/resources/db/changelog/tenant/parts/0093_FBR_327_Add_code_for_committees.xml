<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <!--Insert new code Committees in m_code table-->
    <changeSet author="fineract" id="1">
        <insert tableName="m_code">
            <column name="code_name" value="Committees"/>
            <column name="is_system_defined" valueBoolean="true"/>
        </insert>
    </changeSet>
    <changeSet author="fineract" id="2">
        <createTable tableName="m_committee_user">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="committee_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="fineract" id="3">
        <addUniqueConstraint
                columnNames="committee_id, user_id"
                constraintName="committee_user_unique"
                tableName="m_committee_user"
        />
    </changeSet>
    <changeSet author="fineract" id="4">
        <sql>
            INSERT INTO m_code_value (code_id, code_value, code_description, order_position, code_score, is_active, is_mandatory)
            SELECT id, 'A', 'A' , 1, 1, 1, 0
            FROM fineract_default.m_code c WHERE c.code_name = 'Committees';
        </sql>
        <sql>
            INSERT INTO m_code_value (code_id, code_value, code_description, order_position, code_score, is_active, is_mandatory)
            SELECT id, 'B', 'B' , 2, 2, 1, 0
            FROM fineract_default.m_code c WHERE c.code_name = 'Committees';
        </sql>
        <sql>
            INSERT INTO m_code_value (code_id, code_value, code_description, order_position, code_score, is_active, is_mandatory)
            SELECT id, 'C', 'C' , 3, 3, 1, 0
            FROM fineract_default.m_code c WHERE c.code_name = 'Committees';
        </sql>
        <sql>
            INSERT INTO m_code_value (code_id, code_value, code_description, order_position, code_score, is_active, is_mandatory)
            SELECT id, 'D', 'D' , 4, 4, 1, 0
            FROM fineract_default.m_code c WHERE c.code_name = 'Committees';
        </sql>
    </changeSet>
</databaseChangeLog>
