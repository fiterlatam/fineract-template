<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <!--Create new table to keep the charge range configuration-->
    <changeSet author="fineract" id="1">
        <createTable tableName="m_charge_range">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="charge_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="min_day" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="max_day" type="INT" defaultValueComputed="NULL" >
            </column>
            <column name="fee_rate" type="DECIMAL(19, 6)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <!--Insert constraints for table m_charge_range-->
    <changeSet author="fineract" id="2">
        <addForeignKeyConstraint baseColumnNames="charge_id"
                                 baseTableName="m_charge_range"
                                 constraintName="m_charge_range_chargefk_1" deferrable="false" initiallyDeferred="false"
                                 onDelete="RESTRICT" onUpdate="RESTRICT" referencedColumnNames="id"
                                 referencedTableName="m_charge" validate="true"/>
    </changeSet>
    <!--Add new column in table m_charge-->
    <changeSet author="fineract" id="3">
        <addColumn tableName="m_charge">
            <column name="charge_disbursement_type_enum" type="SMALLINT" defaultValue="1">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <!--Add new column in table m_product_loan-->
    <changeSet author="fineract" id="4">
        <addColumn tableName="m_product_loan">
            <column name="limit_of_days_for_addon" type="SMALLINT" defaultValue="35">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    <!--Add new column in table m_loan_charge-->
    <changeSet author="fineract" id="5">
        <addColumn tableName="m_loan_charge">
            <column name="charge_disbursement_type_enum" type="SMALLINT" defaultValue="1">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>
