<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet author="fineract" id="10">
        <createTable schemaName= "custom" tableName="c_channel_validation">
            <column name="id" type="INT4">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(1000)">
                <constraints nullable="true"/>
            </column>
            <column name="active" type="boolean" defaultValue="true">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="fineract" id="20" >
        <insert schemaName="custom" tableName="c_channel_validation">
            <column name="id" valueNumeric="100"/>
            <column name="name" value="Canal habilitado"/>
            <column name="description" value="Validar que el canal se encuentre habilitado, y si no es válido mostrar el mensaje parametrizado en la tabla."/>
            <column name="active" valueBoolean="true"/>
        </insert>
    </changeSet>

    <changeSet author="fineract" id="30" >
        <insert schemaName="custom" tableName="c_channel_validation">
            <column name="id" valueNumeric="200"/>
            <column name="name" value="Fecha de transaccion"/>
            <column name="description" value="Validar que fecha de transaccion corresponda con fecha dia, y si no es válido mostrar el mensaje parametrizado en la tabla."/>
            <column name="active" valueBoolean="true"/>
        </insert>
    </changeSet>

    <changeSet author="fineract" id="40" >
        <insert schemaName="custom" tableName="c_channel_validation">
            <column name="id" valueNumeric="300"/>
            <column name="name" value="Punto de venta del aliado habilitado"/>
            <column name="description" value="Validar que el punto de venta del aliado se encuentre habilitado para compras, y si no es válido mostrar el mensaje parametrizado en la tabla."/>
            <column name="active" valueBoolean="true"/>
        </insert>
    </changeSet>

    <changeSet author="fineract" id="50" >
        <insert schemaName="custom" tableName="c_channel_validation">
            <column name="id" valueNumeric="400"/>
            <column name="name" value="Estado del cliente permita compras/avance"/>
            <column name="description" value="Validar que el estado del cliente permita compras/avance, y si no es válido mostrar el mensaje parametrizado en la tabla."/>
            <column name="active" valueBoolean="true"/>
        </insert>
    </changeSet>

    <changeSet author="fineract" id="60" >
        <insert schemaName="custom" tableName="c_channel_validation">
            <column name="id" valueNumeric="500"/>
            <column name="name" value="Estado del credito permita compras/avance"/>
            <column name="description" value="Validar que el estado del credito permita compras/avance, y si no es válido mostrar el mensaje parametrizado en la tabla."/>
            <column name="active" valueBoolean="true"/>
        </insert>
    </changeSet>

    <changeSet author="fineract" id="70" >
        <insert schemaName="custom" tableName="c_channel_validation">
            <column name="id" valueNumeric="600"/>
            <column name="name" value="Valor de la compra/avance no supere el disponible"/>
            <column name="description" value="Validar que el valor de la compra/avance no supere el disponible del cliente, y si no es válido mostrar el mensaje parametrizado en la tabla."/>
            <column name="active" valueBoolean="true"/>
        </insert>
    </changeSet>

    <changeSet author="fineract" id="80" >
        <insert schemaName="custom" tableName="c_channel_validation">
            <column name="id" valueNumeric="700"/>
            <column name="name" value="Plazo seleccionado se encuentre habilitado "/>
            <column name="description" value="Validar que el plazo seleccionado se encuentre habilitado para el producto SU+pay, y si no es válido mostrar el mensaje parametrizado en la tabla."/>
            <column name="active" valueBoolean="true"/>
        </insert>
    </changeSet>

    <changeSet author="fineract" id="90" >
        <insert schemaName="custom" tableName="c_channel_validation">
            <column name="id" valueNumeric="800"/>
            <column name="name" value="Valor mínimo de la transacción"/>
            <column name="description" value="Validar el valor mínimo de la transacción (el cual deberá ser paremetrizado tambien) y, si no es válido, mostrar el mensaje parametrizado en la tabla."/>
            <column name="active" valueBoolean="true"/>
        </insert>
    </changeSet>

    <changeSet author="fineract" id="100" >
        <insert schemaName="custom" tableName="c_channel_validation">
            <column name="id" valueNumeric="900"/>
            <column name="name" value="Valor de la compra/avance no supere el disponible del aliado"/>
            <column name="description" value="Validar que el aliado no supere el cupo máximo de compras parametrizado en la creación del aliado"/>
            <column name="active" valueBoolean="true"/>
        </insert>
    </changeSet>

</databaseChangeLog>
