<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <property name="now" value="now()"/>
    <changeSet author="fineract" id="1">
        <createTable tableName="m_vat_rate">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(15)">
                <constraints nullable="false"/>
            </column>
            <column name="percentage" type="DECIMAL(19, 2)" >
                <constraints nullable="false"/>
            </column>
            <column defaultValueBoolean="false" name="active"  type="boolean" >
                <constraints nullable="false"/>
            </column>
            <column name="created_date" type="date" >
                <constraints nullable="false"/>
            </column>
            <column name="createdby_id" type="BIGINT" >
                <constraints nullable="false"/>
            </column>
            <column name="lastmodifiedby_id" type="BIGINT" >
                <constraints nullable="true"/>
            </column>
            <column name="lastmodified_date" type="date" >
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="fineract" id="2">
        <addForeignKeyConstraint baseColumnNames="createdby_id"
                                 baseTableName="m_vat_rate"
                                 constraintName="m_vat_rate_createdbyfk_2" deferrable="false" initiallyDeferred="false"
                                 onDelete="RESTRICT" onUpdate="RESTRICT" referencedColumnNames="id"
                                 referencedTableName="m_appuser" validate="true"/>

        <addForeignKeyConstraint baseColumnNames="lastmodifiedby_id"
                                 baseTableName="m_vat_rate"
                                 constraintName="m_vat_rate_lastmodifiedfk_2" deferrable="false" initiallyDeferred="false"
                                 onDelete="RESTRICT" onUpdate="RESTRICT" referencedColumnNames="id"
                                 referencedTableName="m_appuser" validate="true"/>
    </changeSet>
    <changeSet author="fineract" id="3">
        <insert tableName="m_permission">
            <column name="grouping" value="portfolio"/>
            <column name="code" value="CREATE_vatrate"/>
            <column name="entity_name" value="vatrate"/>
            <column name="action_name" value="CREATE"/>
            <column name="can_maker_checker" valueNumeric="1"/>
        </insert>
        <insert tableName="m_permission">
            <column name="grouping" value="portfolio"/>
            <column name="code" value="READ_vatrate"/>
            <column name="entity_name" value="vatrate"/>
            <column name="action_name" value="READ"/>
            <column name="can_maker_checker" valueNumeric="0"/>
        </insert>
        <insert tableName="m_permission">
            <column name="grouping" value="portfolio"/>
            <column name="code" value="UPDATE_vatrate"/>
            <column name="entity_name" value="vatrate"/>
            <column name="action_name" value="UPDATE"/>
            <column name="can_maker_checker" valueNumeric="1"/>
        </insert>
        <insert tableName="m_permission">
            <column name="grouping" value="portfolio"/>
            <column name="code" value="DELETE_vatrate"/>
            <column name="entity_name" value="vatrate"/>
            <column name="action_name" value="DELETE"/>
            <column name="can_maker_checker" valueNumeric="1"/>
        </insert>
    </changeSet>

    <changeSet id="4" author="fineract">
        <insert tableName="m_vat_rate">
            <column name="id" valueNumeric="1"/>
            <column name="name" value="Alicuota 0%" />
            <column name="percentage" valueNumeric="0" />
            <column name="active" valueBoolean="true" />
            <column name="created_date" valueDate="${now}" />
            <column name="createdby_id" valueNumeric="1" />
        </insert>
        <insert tableName="m_vat_rate">
            <column name="id" valueNumeric="2"/>
            <column name="name" value="Alicuota 8%" />
            <column name="percentage" valueNumeric="8" />
            <column name="active" valueBoolean="true" />
            <column name="created_date" valueDate="${now}" />
            <column name="createdby_id" valueNumeric="1" />
        </insert>
        <insert tableName="m_vat_rate">
            <column name="id" valueNumeric="3"/>
            <column name="name" value="Alicuota 16%" />
            <column name="percentage" valueNumeric="16" />
            <column name="active" valueBoolean="true" />
            <column name="created_date" valueDate="${now}" />
            <column name="createdby_id" valueNumeric="1" />
        </insert>
    </changeSet>

    <changeSet id="5" author="fineract">
        <addColumn tableName="m_charge">
            <column name="is_vat_required" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="6" author="fineract">
        <addColumn tableName="m_product_loan">
            <column name="is_vat_required" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="7" author="fineract">
        <addColumn tableName="m_loan">
            <column name="is_vat_required" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="8" author="fineract">
        <addColumn tableName="m_client">
            <column name="is_vat_required" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addColumn tableName="m_client">
            <column name="vat_rate_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet author="fineract" id="9">
        <addForeignKeyConstraint baseColumnNames="vat_rate_id" baseTableName="m_client" constraintName="FK_m_client_vat_rate_id"
                                 deferrable="false" initiallyDeferred="false" onDelete="RESTRICT" onUpdate="RESTRICT"
                                 referencedColumnNames="id" referencedTableName="m_vat_rate" validate="true"/>
    </changeSet>

    <changeSet id="fineract" author="10">
        <addColumn tableName="m_loan_repayment_schedule">
            <!-- interest vat params -->
            <column name="vat_on_interest_charged_derived" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="vat_on_interest_paid_derived" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="vat_on_interest_writtenoff_derived" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="vat_on_interest_waived_derived" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="vat_on_interest_outstanding" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="vat_on_interest_overdue_derived" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <!-- charge vat params -->
            <column name="vat_on_charges_expected_derived" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="vat_on_charges_paid_derived" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="vat_on_charges_writtenoff_derived" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="vat_on_charges_waived_derived" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="vat_on_charges_outstanding_derived" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="vat_on_charges_overdue_derived" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="fineract" author="11">
        <addColumn tableName="m_loan">
            <column name="total_vatoninterest_charged" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="total_vatoninterest_paid" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="total_vatoninterest_writtenoff" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="total_vatoninterest_waived" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="total_vatoninterest_outstanding" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="total_vatoninterest_overdue" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="total_vatoncharge_expected" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="total_vatoncharge_paid" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="total_vatoncharge_writtenoff" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="total_vatoncharge_waived" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="total_vatoncharge_outstanding" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="total_vatoncharge_overdue" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>


    <changeSet id="12" author="fineract">
        <addColumn tableName="m_loan_transaction">
            <column name="vat_on_interest_portion" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="vat_on_charges_portion" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="13" author="fineract">
        <addColumn tableName="m_loan">
            <column name="vat_percentage" type="DECIMAL(19, 2)" >
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="14" author="fineract">
        <addColumn tableName="m_loan_transaction_repayment_schedule_mapping">
            <column name="vat_on_interest_portion_derived" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
            <column name="vat_on_charges_portion_derived" type="DECIMAL(19, 6)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet author="fineract" id="15">
        <addColumn tableName="m_loan_repayment_schedule_history">
            <column defaultValueComputed="0" name="vat_on_charges" type="DECIMAL(19, 6)" >
                <constraints nullable="false"/>
            </column>
            <column defaultValueComputed="0" name="vat_on_interest" type="DECIMAL(19, 6)" >
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
