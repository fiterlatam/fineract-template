<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="1" author="fineract">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="1">
                SELECT COUNT(*) FROM job WHERE name = 'Liquidación de Compras';
            </sqlCheck>
        </preConditions>
        <update tableName="job" >
            <column name="name" value="Liquidacion de Compras"/>
            <column name="display_name" value="Liquidacion de Compras"/>
            <where>display_name='Liquidación de Compras'</where>
        </update>
    </changeSet>
    <changeSet id="2" author="fineract">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="1">
                SELECT COUNT(*) FROM c_configuration WHERE name = 'VAT-commission-percentage'
            </sqlCheck>
        </preConditions>
        <update tableName="c_configuration">
            <column name="name" value="IVA Por comision"/>
            <column name="description" value="IVA Por comision percentage"/>
            <where>name = 'VAT-commission-percentage'</where>
        </update>
    </changeSet>
</databaseChangeLog>
